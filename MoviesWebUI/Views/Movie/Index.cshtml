@model IEnumerable<MoviesWebUI.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

<p>
    <a asp-action="Upload">Upload New Video</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Year</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
